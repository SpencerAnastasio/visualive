  <body class="kinect">
    <% if(contents){ %>
      <div id="three">
        <% contents.forEach(function(content){ %>
          <% if(content.network === 'instagram'){ %>
            <h6 class="hidden old <%= content._id %>"><%= content._id %></h6>
            <%- include('./instashow.ejs', {content: content}); %>
          <% } %>
          <% if(content.network === 'twitter'){ %>
            <h6 class="hidden old <%= content._id %>"><%= content._id %></h6>
            <%- include('./twitshow.ejs', {content: content}); %>
          <% } %>
        <% }); %>
      </div>

      <div id="theater">
        <% contents.forEach(function(content){ %>
          <% if(content.network === 'instagram'){ %>
            <h6 class="hidden old <%= content._id %>"><%= content._id %></h6>
            <%- include('./instashow.ejs', {content: content}); %>
          <% } %>
          <% if(content.network === 'twitter'){ %>
            <h6 class="hidden old <%= content._id %>"><%= content._id %></h6>
            <%- include('./twitshow.ejs', {content: content}); %>
          <% } %>
        <% }); %>
      </div>
    <% } %>

    <footer>
      <div class="container-fluid">
        <div class="row">
          <div class="hashtag col-md-3">
            <h2>#CRS2015</h2>
          </div>
          <div class="col-md-6 message">
            <span class="inst1 inst">Step up to Explore!</span>
          </div>
          <div class="col-md-3 logo">
          </div>
        </div>
      </div>
    </footer>

    <div class="user-engaged user-engaged-centered jumbotron in">
      <div class="scroll row">
        <div class="col-md-3 arrow left">
          <i class="fa fa-arrow-left"></i>
        </div>
        <div class="col-md-6">
          Step L or R to Pan
        </div>
        <div class="col-md-3 arrow right">
          <i class="fa fa-arrow-right"></i>
        </div>
      </div>
      <div class="zoom row">
        <div class="col-md-3 arrow up">
          <i class="fa fa-arrow-up"></i>
        </div>
        <div class="col-md-6">
          Step Up or Back to Zoom
        </div>
        <div class="col-md-3 arrow down">
          <i class="fa fa-arrow-down"></i>
        </div>
      </div>
    </div>

    <script src="js/vendor/jquery.min.js"></script>
    <script src="js/vendor/imagesloaded.pkgd.min.js"></script>
    <script src="js/vendor/lodash.min.js"></script>
    <script src="js/vendor/jquery.isotope.min.js"></script>
